<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxq.shopinterface.mapper.UserMapper">

    <resultMap id="baseMap" type="com.wxq.bean.User">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="password" property="password"/>
        <result column="balance" property="balance"/>
        <result column="account" property="account"/>
        <result column="role" property="role"/>
        <result column="method" property="method"/>
        <result column="name" property="name"/>
        <result column="head_img" property="headImg"/>
    </resultMap>

    <select id="total" resultType="long">
        select count(id) from user;
    </select>

    <select id="findByPage" resultMap="baseMap">
        select
        id,
        nickname,
        password,
        balance,
        account,
        role,
        method,
        name,
        head_img
        from user
        where 1=1
        <if test="params.nickname != null and params.nickname != ''">
            and nickname like concat('%',#{params.nickname}, '%')
        </if>
        <if test="params.name != null and params.name != ''">
            and name like concat('%', #{params.name}, '%')
        </if>
        <if test="params.method != null">
            and method=#{params.method}
        </if>
        <if test="params.role != null">
            and role=#{params.role}
        </if>
        limit #{begin}, #{end}
    </select>
</mapper>
