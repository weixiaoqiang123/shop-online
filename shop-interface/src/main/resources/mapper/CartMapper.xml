<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxq.shopinterface.mapper.CartMapper">

    <resultMap id="baseMap" type="com.wxq.bean.Cart">
        <id column="id" property="id"/>
        <result column="account" property="account"/>
        <result column="spu_name" property="spuName"/>
        <result column="spu_introduction" property="spuIntroduction"/>
        <result column="sku_code" property="skuCode"/>
        <result column="price" property="price"/>
        <result column="shop_num" property="shopNum"/>
        <result column="business_name" property="businessName"/>
        <result column="business_code" property="businessCode"/>
        <result column="image_path" property="imagePath"/>
        <result column="create_time" property="createTime"/>
        <collection property="attrValueList" column="sku_code" javaType="com.wxq.bean.CartAttrValue"
                    select="com.wxq.shopinterface.mapper.CartAttrValueMapper.findList"/>
    </resultMap>

    <select id="findCart" resultMap="baseMap">
        select
        id,
        account,
        spu_name,
        spu_introduction,
        sku_code,
        price,
        shop_num,
        business_name,
        business_code,
        image_path,
        create_time
        from cart
        where account=#{account}
        and sku_code=#{skuCode}
    </select>

    <select id="total" resultType="long">
        select count(id) from cart
    </select>

    <select id="findByPage" resultMap="baseMap">
        select
        id,
        account,
        spu_name,
        spu_introduction,
        sku_code,
        price,
        shop_num,
        business_name,
        business_code,
        image_path,
        create_time
        from cart
        where 1=1
        <if test="params.account != and params.account != ''">
            and account like concat('%', #{account}, '%')
        </if>
        <if test="params.spuName != and params.spuName != ''">
            and spu_name like concat('%', #{params.spuName}, '%')
        </if>
        <if test="params.businessName!=null and params.businessName!=''">
            and business_name like concat('%', #{params.businessName}, '%')
        </if>
        order by create_time
        limit #{begin}, #{end}
    </select>
</mapper>
