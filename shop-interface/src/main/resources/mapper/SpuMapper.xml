<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxq.shopinterface.mapper.SpuMapper">

    <resultMap id="baseMap" type="com.wxq.bean.Spu">
        <id column="id" property="id"/>
        <result column="spu_name" property="spuName"/>
        <result column="spu_code" property="spuCode"/>
        <result column="spu_introduction" property="spuIntroduction"/>
        <result column="original_price" property="originalPrice"/>
        <result column="sale_price" property="salePrice"/>
        <result column="sale_num" property="saleNum"/>
        <result column="cate_code" property="cateCode"/>
        <result column="business_cate_code" property="businessCateCode"/>
        <result column="image_path" property="imagePath"/>
        <collection property="spuAttrList" column="spu_code" javaType="com.wxq.bean.SpuAttr"
                    select="com.wxq.shopinterface.mapper.SpuAttrMapper.findList"/>
    </resultMap>

    <select id="findByPage" resultMap="baseMap">
        select
        id,
        spu_name,
        spu_code,
        spu_introduction,
        original_price,
        sale_price,
        sale_num,
        cate_code,
        business_cate_code,
        image_path
        from spu
        where business_code=#{params.businessCode}
        <if test="params.businessCateCode != null and params.businessCateCode != ''">
            and business_cate_code=#{params.businessCateCode}
        </if>
        limit #{begin}, #{end}
    </select>

    <select id="findList" parameterType="string" resultMap="baseMap">
        select
        id,
        spu_name,
        spu_code,
        spu_introduction,
        original_price,
        sale_price,
        sale_num,
        cate_code,
        business_cate_code,
        image_path
        from spu
        where business_cate_code=#{id}
    </select>

    <delete id="delete" parameterType="string">
        delete from spu where spu_code=#{id}
    </delete>

    <select id="findById" parameterType="string" resultMap="baseMap">
        select
        id,
        spu_name,
        spu_code,
        spu_introduction,
        original_price,
        sale_price,
        sale_num,
        cate_code,
        business_cate_code,
        image_path
        from spu
        where spu_code=#{id}
    </select>
</mapper>
