<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxq.shopinterface.mapper.CartAttrValueMapper">

    <resultMap id="baseMap" type="com.wxq.bean.CartAttrValue">
        <id column="id" property="id"/>
        <result column="sku_code" property="skuCode"/>
        <result column="attr_id" property="attrId"/>
        <result column="value_id" property="valueId"/>
        <association property="attr" column="attr_id" javaType="com.wxq.bean.Attr"
                     select="com.wxq.shopinterface.mapper.AttrMapper.findList"/>
        <association property="attrValue" column="value_id" javaType="com.wxq.bean.AttrValue"
                     select="com.wxq.shopinterface.mapper.AttrValueMapper.findList"/>
    </resultMap>

    <select id="findList" parameterType="string" resultMap="baseMap">
        select id,sku_code,attr_id,value_id from cart_attr_value where sku_code=#{id}
    </select>
</mapper>
